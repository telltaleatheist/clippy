{
  "name": "clippy",
  "version": "1.0.0",
  "description": "Video downloader application using NestJS and Angular",
  "main": "./dist/main.js",
  "scripts": {
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start:dev",
    "start:frontend": "cd frontend && npm run start",
    "build": "npm run build:backend && npm run build:frontend && npm run build:electron && npm run build:preload",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:preload": "tsc --project preload/tsconfig.json",
    "build:electron": "tsc -p tsconfig.json",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "start:prod": "npm run build && node backend/dist/src/main.js",
    "electron": "electron .",
    "electron:dev": "npm run build && cross-env NODE_ENV=development concurrently --kill-others \"npm run start:backend\" \"npx wait-on http://localhost:3000 && electron .\"",
    "electron:prod": "npm run build && cross-env NODE_ENV=production concurrently --kill-others \"node backend/dist/src/main.js\" \"npx wait-on http://localhost:3000 && electron .\"",
    "package:win": "npm run build && electron-builder build --win --publish never",
    "package:linux": "npm run build && electron-builder build --linux --publish never",
    "package": "npm run build && electron-builder build",
    "package:mac": "npm run build && electron-builder --mac"
  },
  "keywords": [
    "video",
    "downloader",
    "nestjs",
    "angular",
    "typescript",
    "youtube",
    "tiktok"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^24.13.3",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "ngx-socket-io": "^4.3.1"
  },
  "build": {
    "appId": "com.owenmorgan.clippy",
    "productName": "Clippy",
    "directories": {
      "output": "dist-electron",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {"from": "frontend/dist", "to": "frontend/dist"},
      {"from": "backend/dist", "to": "backend/dist"},
      {"from": "backend/node_modules", "to": "backend/node_modules"},
      {"from": "bin", "to": "bin"},
      {"from": "node_modules/@nestjs", "to": "node_modules/@nestjs"}
      ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "LSUIElement": false
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
