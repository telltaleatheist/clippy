{
  "name": "clippy",
  "version": "1.0.0",
  "description": "Video downloader application using NestJS and Angular",
  "asar": true,
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend && npm run install:electron",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:electron": "cd electron && [ -f package.json ] && npm install || echo 'No electron/package.json found, skipping...'",
    "clean": "rimraf dist-electron mac-arm64 mac-arm64* win-unpacked *.dmg *.dmg.blockmap *.exe *.exe.blockmap *.AppImage *.AppImage.blockmap",
    "clean:win": "rimraf dist-electron/win-unpacked dist-electron/*Setup*.exe dist-electron/*Setup*.exe.blockmap dist-electron/latest.yml",
    "clean:mac": "rimraf dist-electron/mac dist-electron/mac-arm64 dist-electron/*.dmg dist-electron/*.dmg.blockmap dist-electron/latest-mac.yml mac-arm64 mac-arm64* *.dmg *.dmg.blockmap",
    "clean:linux": "rimraf dist-electron/linux-unpacked dist-electron/*.AppImage dist-electron/*.AppImage.blockmap dist-electron/*.deb dist-electron/latest-linux.yml",
    "clean:all": "npm run clean && rimraf frontend/dist backend/dist",
    "build:all": "npm run build:backend && npm run build:frontend && npm run build:electron && npm run build:preload",
    "build:backend": "tsc -p backend/tsconfig.json && cd backend && npm run build",
    "build:frontend": "tsc -p frontend/tsconfig.json && cd frontend && npm run build",
    "build:electron": "tsc -p electron/tsconfig.electron.json",
    "build:preload": "tsc -p electron/tsconfig.preload.json",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "electron:dev": "npm run build:all && cross-env NODE_ENV=development electron .",
    "electron": "npm run build:all && electron .",
    "package": "npm run build:all && electron-builder build",
    "package:win": "npm run clean:win && npm run build:all && electron-builder build --win --publish never",
    "package:linux": "npm run clean:linux && npm run build:all && electron-builder build --linux --publish never",
    "package:mac": "npm run clean:mac && npm run build:all && electron-builder --mac",
    "package:mac-intel": "npm run clean:mac && npm run build:all && electron-builder --mac --x64"
  },
  "keywords": [
    "video",
    "downloader",
    "nestjs",
    "angular",
    "typescript",
    "youtube",
    "tiktok"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron/typescript-definitions": "^9.1.2",
    "@types/electron": "^1.6.12",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.15.3",
    "cross-env": "^7.0.3",
    "electron": "^36.0.1",
    "electron-builder": "^24.13.3",
    "karma": "^6.4.4",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@angular/core": "^19.2.9",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "electron-log": "^5.3.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "whisper-node": "^1.1.1",
    "yt-dlp-wrap": "^2.3.12",
    "yt-dlp-wrap-extended": "^2.3.15"
  },
  "build": {
    "appId": "com.owenmorgan.clippy",
    "productName": "Clippy",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist-electron",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "utilities",
        "to": "utilities"
      }
    ],
    "files": [
      "dist-electron/electron/**/*",
      "dist-electron/config/**/*",
      "dist-electron/utilities/**/*",
      "!dist-electron/**/*.map",
      "backend/dist/**/*",
      "!backend/dist/**/*.map",
      "backend/package.json",
      "frontend/dist/clippy-frontend/**/*",
      "backend/node_modules/**/*",
      "utilities/**/*",
      "node_modules/**/*",
      "!**/node_modules/**/test/**",
      "!**/node_modules/**/tests/**",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/*.d.ts",
      "!**/node_modules/**/*.map",
      "!**/node_modules/**/LICENSE*",
      "!**/node_modules/**/license*",
      "!**/node_modules/**/docs/**",
      "!**/node_modules/**/example*/**",
      "!**/node_modules/**/coverage/**",
      "!**/node_modules/**/*.ts",
      "!**/node_modules/**/README*",
      "!**/node_modules/**/CHANGELOG*"
    ],
    "asarUnpack": [
      "backend/node_modules/**",
      "utilities/**"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "LSUIElement": false
      }
    },
    "dmg": {
      "format": "ULFO",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "exports": {
    "./config": "./config/index.ts",
    "./utilities": "./utilities/index.ts",
    "./electron": "./electron/index.ts",
    "./download": "./electron/utilities/download.ts"
  },
  "imports": {
    "#config/*": "./config/*",
    "#utilities/*": "./utilities/*",
    "#electron/*": "./electron/*"
  }
}
