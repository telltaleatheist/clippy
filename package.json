{
  "name": "clippy",
  "version": "1.0.0",
  "description": "Video downloader application using NestJS and Angular",
  "asar": true,
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend && npm run install:electron",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:electron": "cd electron && [ -f package.json ] && npm install || echo 'No electron/package.json found, skipping...'",
    "clean": "rimraf dist-electron mac-arm64 mac-arm64* win-unpacked *.dmg *.dmg.blockmap *.exe *.exe.blockmap *.AppImage *.AppImage.blockmap",
    "clean:win": "rimraf dist-electron",
    "clean:mac": "rimraf dist-electron/mac dist-electron/mac-arm64 dist-electron/*.dmg dist-electron/*.dmg.blockmap dist-electron/latest-mac.yml mac-arm64 mac-arm64* *.dmg *.dmg.blockmap",
    "clean:linux": "rimraf dist-electron/linux-unpacked dist-electron/*.AppImage dist-electron/*.AppImage.blockmap dist-electron/*.deb dist-electron/latest-linux.yml",
    "clean:all": "npm run clean && rimraf frontend/dist backend/dist",
    "build:all": "npm run build:backend && npm run build:frontend && npm run build:electron && npm run build:preload",
    "build:backend": "tsc -p backend/tsconfig.json && cd backend && npm run build",
    "build:frontend": "tsc -p frontend/tsconfig.json && cd frontend && npm run build",
    "build:electron": "tsc -p electron/tsconfig.electron.json",
    "build:preload": "tsc -p electron/tsconfig.preload.json",
    "download:ytdlp": "node scripts/download-ytdlp.js",
    "package:python:mac-arm64": "node scripts/package-python-mac.js arm64",
    "package:python:mac-x64": "node scripts/package-python-mac.js x64",
    "package:python:win-x64": "node scripts/package-python-windows.js x64",
    "package:python:win-arm64": "node scripts/package-python-windows.js arm64",
    "clean:python:mac-arm64": "rimraf dist-python/python-arm64",
    "clean:python:mac-x64": "rimraf dist-python/python-x64",
    "clean:python:win-x64": "rimraf dist-python/python-x64",
    "clean:python:win-arm64": "rimraf dist-python/python-arm64",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "electron:dev": "npm run build:all && cross-env NODE_ENV=development electron .",
    "electron:dev:bundled": "npm run build:all && cross-env NODE_ENV=development USE_BUNDLED_PYTHON=true electron .",
    "electron:test-packaged": "npm run build:all && cross-env NODE_ENV=production electron .",
    "electron": "npm run build:all && electron .",
    "package:mac-arm64": "npm run clean:mac && npm run download:ytdlp && npm run build:all && npm run package:python:mac-arm64 && electron-builder --mac --arm64 --publish never",
    "package:mac-x64": "npm run clean:mac && npm run download:ytdlp && npm run build:all && npm run package:python:mac-x64 && electron-builder --mac --x64 --config.mac.extraResources.0.from=dist-python/python-x64 --publish never",
    "package:win-x64": "npm run clean:win && npm run download:ytdlp && npm run build:all && npm run package:python:win-x64 && electron-builder --win --x64 --publish never",
    "package:win-arm64": "npm run clean:win && npm run download:ytdlp && npm run build:all && npm run package:python:win-arm64 && electron-builder --win --arm64 --config.win.extraResources.0.from=dist-python/python-arm64 --publish never",
    "package:linux": "npm run clean:linux && npm run download:ytdlp && npm run build:all && electron-builder --linux --publish never",
    "clean:package:mac-arm64": "npm run clean:python:mac-arm64 && npm run package:mac-arm64",
    "clean:package:mac-x64": "npm run clean:python:mac-x64 && npm run package:mac-x64",
    "clean:package:win-x64": "npm run clean:python:win-x64 && npm run package:win-x64",
    "clean:package:win-arm64": "npm run clean:python:win-arm64 && npm run package:win-arm64"
  },
  "keywords": [
    "video",
    "downloader",
    "nestjs",
    "angular",
    "typescript",
    "youtube",
    "tiktok"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@electron/typescript-definitions": "^9.1.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.6.12",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.15.3",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^24.13.3",
    "extract-zip": "^2.0.1",
    "karma": "^6.4.4",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@angular/core": "^19.2.9",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "better-sqlite3": "^12.4.1",
    "electron-log": "^5.3.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "whisper-node": "^1.1.1",
    "yt-dlp-wrap": "^2.3.12",
    "yt-dlp-wrap-extended": "^2.3.15"
  },
  "build": {
    "appId": "com.owenmorgan.clippy",
    "productName": "Clippy",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist-electron",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "backend/python",
        "to": "backend/python"
      },
      {
        "from": "utilities",
        "to": "utilities"
      },
      {
        "from": "node_modules/@ffmpeg-installer",
        "to": "node_modules/@ffmpeg-installer"
      },
      {
        "from": "node_modules/@ffprobe-installer",
        "to": "node_modules/@ffprobe-installer"
      }
    ],
    "files": [
      "dist-electron/electron/**/*",
      "dist-electron/config/**/*",
      "dist-electron/utilities/**/*",
      "!dist-electron/**/*.map",
      "!backend/**",
      "frontend/dist/clippy-frontend/**/*",
      "!utilities/**",
      "node_modules/**/*",
      "!**/node_modules/**/test/**",
      "!**/node_modules/**/tests/**",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/*.d.ts",
      "!**/node_modules/**/*.map",
      "!**/node_modules/**/LICENSE*",
      "!**/node_modules/**/license*",
      "!**/node_modules/**/docs/**",
      "!**/node_modules/**/example*/**",
      "!**/node_modules/**/coverage/**",
      "!**/node_modules/**/*.ts",
      "!**/node_modules/**/README*",
      "!**/node_modules/**/CHANGELOG*"
    ],
    "asarUnpack": [
      "utilities/**"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "extraResources": [
        {
          "from": "dist-python/python-arm64",
          "to": "python",
          "filter": [
            "**/*"
          ]
        }
      ],
      "extendInfo": {
        "LSUIElement": false
      }
    },
    "dmg": {
      "format": "ULFO",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName} Setup ${version}.${ext}",
      "extraResources": [
        {
          "from": "dist-python/python-x64",
          "to": "python",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "displayLanguageSelector": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "include": "assets/installer.nsh",
      "warningsAsErrors": false,
      "packElevateHelper": true
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "exports": {
    "./config": "./config/index.ts",
    "./utilities": "./utilities/index.ts",
    "./electron": "./electron/index.ts",
    "./download": "./electron/utilities/download.ts"
  },
  "imports": {
    "#config/*": "./config/*",
    "#utilities/*": "./utilities/*",
    "#electron/*": "./electron/*"
  }
}
