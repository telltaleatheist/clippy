{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "../dist/preload",
      "strict": true,
      "lib": ["ESNext", "DOM"],
      "types": ["node"], // Remove "electron" from here
      "skipLibCheck": true // This helps skip type checking of node_modules
    },
    "include": [
      "*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }