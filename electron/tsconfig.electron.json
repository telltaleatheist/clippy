{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "../dist-electron",
    "rootDir": "..",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "../electron/**/*.ts",
    "../utilities/**/*.ts",
    "../config/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../backend/**/*",
    "../frontend/**/*",
    "../dist",
    "**/*.spec.ts"
  ]
}