{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      {
        "include": "../python/**/*",
        "outDir": "dist/python",
        "watchAssets": true
      },
      {
        "include": "saved-links/web/**/*",
        "outDir": "dist/saved-links",
        "watchAssets": true
      }
    ]
  }
}